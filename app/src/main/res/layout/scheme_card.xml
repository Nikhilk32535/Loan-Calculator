<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="14dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="10dp"
    android:backgroundTint="#FFFFFF"
    android:outlineSpotShadowColor="@color/gold_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row: Scheme Name + Interest Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvSchemeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/bank"
                android:drawablePadding="8dp"
                android:text="Scheme Name"
                android:textColor="@color/text_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInterestRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.5% Interest"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- Existing Loan -->
        <TextView
            android:id="@+id/tvExistingLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Existing Loan: ₹0"
            android:textColor="#757575"
            android:textSize="15sp"
            android:layout_marginTop="10dp" />

        <!-- More Eligible -->
        <TextView
            android:id="@+id/tvLoanAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Eligible: ₹0"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp" />

        <!-- Monthly Interest -->
        <TextView
            android:id="@+id/tvMonthlyInterest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Interest: ₹0"
            android:textColor="#555555"
            android:textSize="15sp"
            android:layout_marginTop="6dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
