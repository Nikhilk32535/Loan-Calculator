<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparent">

    <!-- Row for Gold to Loan & Loan to Gold -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Gold to Loan -->
        <LinearLayout
            android:id="@+id/tab_gold_to_loan"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/tab_background"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_gold_bar"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold to Loan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#A67C00" /> <!-- Rich gold -->
        </LinearLayout>

        <!-- Loan to Gold -->
        <LinearLayout
            android:id="@+id/tab_loan_to_gold"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:background="@drawable/tab_background"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_rupee"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan to Gold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#A67C00" />
        </LinearLayout>
    </LinearLayout>

    <!-- Coming Soon -->
    <LinearLayout
        android:id="@+id/tab_coming_soon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/tab_background"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Coming"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#A67C00" />
    </LinearLayout>

</LinearLayout>
