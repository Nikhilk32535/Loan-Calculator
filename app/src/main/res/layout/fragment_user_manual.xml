<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/manualTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“˜ How to Use Loan Calculator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingBottom="24dp"
            android:gravity="center" />

        <!-- Reusable Card Item -->
        <!-- Step 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_weight"
                android:layout_marginEnd="16dp"
                android:tint="#FFC107"
                android:contentDescription="Gold Icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1. Enter the Gold Weight (in grams) and Stone Weight if any. Net weight is calculated automatically."
                android:textSize="16sp"
                android:textColor="#444" />
        </LinearLayout>

        <!-- Step 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_rupee"
                android:layout_marginEnd="16dp"
                android:contentDescription="Purity Icon"
                app:tint="#4CAF50" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2. Tap the purity button to select gold purity like 18k, 22k, 24k etc."
                android:textSize="16sp"
                android:textColor="#444" />
        </LinearLayout>

        <!-- Step 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
             
            android:elevation="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bank"
                android:layout_marginEnd="16dp"
                android:tint="#03A9F4"
                android:contentDescription="Scheme Icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3. The app will automatically show eligible loan schemes based on your input."
                android:textSize="16sp"
                android:textColor="#444" />
        </LinearLayout>

        <!-- Done Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‰ That's it! You're ready to calculate your gold loan."
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="#555"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="32dp" />

    </LinearLayout>
</ScrollView>
